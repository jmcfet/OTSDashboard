<UserControl x:Class="DashBoard.DbQuerys"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DashBoard"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel>
        <StackPanel HorizontalAlignment="Left" Height="60" Margin="10,34,0,0" VerticalAlignment="Top" Width="280" Orientation="Horizontal">
        <Button Name="cpr" Content="CPR " Margin="0,0,10,0" Click="cpr_Click"/>
        <Button  Name="missing" Content="Missing" Margin="0,0,10,0" Click="missing_Click"/>
        
        <Button Name="shirts" Content="Shirts" Click="shirts_Click"/>
    </StackPanel>
    <DataGrid Name="details"  HorizontalAlignment="Left" Width="290" Height="200"  Margin="0,10"/>
        </StackPanel>
    </Grid>
</UserControl>
